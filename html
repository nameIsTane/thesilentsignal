<body>
  <!-- AUDIO ELEMENT FOR BEEP SOUNDS -->
  <audio id="keyBeep" src="beep.mp3" preload="auto"></audio>
  
  <!-- MAIN TERMINAL CONTAINER -->
  <div id="terminal"></div>

  <!-- JAVASCRIPT FOR CLI FUNCTIONALITY -->
  <script>
    const terminal = document.getElementById('terminal');
    const keyBeep = document.getElementById('keyBeep');

    let inputActive = true; // Whether we are currently capturing typing
    let inputBuffer = '';   // What the user has typed so far

    // Print initial welcome text
    printLine("Listening... Decoding... The Silent Signal awaits...");
    printLine("Type 'help' for a list of commands.\n");

    // Create the input line element
    const inputLine = document.createElement('span');
    inputLine.classList.add('input-line');
    terminal.appendChild(inputLine);

    // Create the blinking cursor
    const cursor = document.createElement('span');
    cursor.classList.add('blinking-cursor');
    terminal.appendChild(cursor);

    // Focus on the window to capture keystrokes
    window.focus();

    // Listen for keydown events
    window.addEventListener('keydown', function(e) {
      // Optional: play beep on each keypress (except shift, ctrl, alt, etc.)
      if (!e.metaKey && !e.ctrlKey && !e.altKey && e.key.length === 1) {
        keyBeep.currentTime = 0; // reset audio
        keyBeep.play();
      }

      if (!inputActive) return; // If we're not accepting input, do nothing

      if (e.key === 'Enter') {
        // Process the typed command
        processCommand(inputBuffer.trim());
        inputBuffer = '';
        updateInputLine();
      } else if (e.key === 'Backspace') {
        // Remove last character
        inputBuffer = inputBuffer.slice(0, -1);
        updateInputLine();
      } else if (e.key.length === 1) {
        // Add character to buffer
        inputBuffer += e.key;
        updateInputLine();
      }
    });

    // Update the displayed text of the input line
    function updateInputLine() {
      inputLine.textContent = "> " + inputBuffer;
      // Scroll to bottom of terminal so the user always sees the latest
      terminal.scrollTop = terminal.scrollHeight;
    }

    // Print a new line in the terminal
    function printLine(text = "") {
      const line = document.createElement('div');
      line.classList.add('output-line');
      line.textContent = text;
      terminal.appendChild(line);
      // Scroll to bottom
      terminal.scrollTop = terminal.scrollHeight;
    }

    // Command handler
    function processCommand(cmd) {
      // Echo the command
      printLine("> " + cmd);

      switch(cmd.toLowerCase()) {
        case 'help':
          printLine("Available commands:");
          printLine("- about");
          printLine("- signal");
          printLine("- logs");
          printLine("- access");
          printLine("- contact");
          printLine("- help");
          printLine("(hint: try 'signal_33' for something hidden...)");
          printLine();
          break;

        case 'about':
          printLine("TheSilentSignal: An enigmatic broadcast.");
          printLine("Seek the code 33 for deeper access...");
          printLine();
          break;

        case 'signal':
          printLine("Decoding The Signal...");
          printLine("... ... ...");
          printLine("Transmission unstable. Try 'signal_33'?");
          printLine();
          break;

        case 'signal_33':
          // Show some glitch text or hidden message
          printLine("Signal 33 detected. Accessing hidden broadcast...\n");
          // Example: A glitchy text
          const glitchLine = document.createElement('div');
          glitchLine.classList.add('output-line', 'glitch');
          glitchLine.setAttribute('data-text', '[ENCRYPTED 33] ~~~~~~');
          glitchLine.textContent = '[ENCRYPTED 33] ~~~~~~';
          terminal.appendChild(glitchLine);
          printLine();
          break;

        case 'logs':
          printLine("[LOG: 2025-02-08 13:33] Transmission #1: ***-33-****");
          printLine("[LOG: 2025-02-08 14:10] Transmission #2: ***----***");
          printLine("More logs locked in 'access' area...");
          printLine();
          break;

        case 'access':
          printLine("Restricted. Enter passphrase (hint: '33'?).");
          printLine();
          break;

        case '33':
          printLine("Access Granted. Hidden logs unlocked...");
          printLine("[Hidden LOG: System reboot :: Sub-channel 33 active]");
          printLine("You have discovered the deeper layers of The Silent Signal.");
          printLine("Type 'help' for more, or keep exploring...");
          printLine();
          break;

        case 'contact':
          printLine("Transmit your signal: [emailÂ protected]");
          printLine("Or type your message here (not yet implemented).");
          printLine();
          break;

        case '':
          // Empty command (user just pressed Enter)
          printLine();
          break;

        default:
          printLine("Unknown command. Type 'help' for a list of commands.");
          printLine();
          break;
      }
    }
  </script>
</body>
</html>
