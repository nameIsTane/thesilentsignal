  <style>
    /* ----- BASIC RESETS & LAYOUT ----- */
    * {
      margin: 0; 
      padding: 0; 
      box-sizing: border-box;
    }
    html, body {
      width: 100%;
      height: 100%;
      background: #000; 
      color: #00ff00; 
      font-family: 'Courier New', monospace;
      overflow: hidden; /* Hide scrollbars for a "fullscreen" terminal feel */
    }
    #terminal {
      width: 100%;
      height: 100%;
      padding: 20px;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      overflow-y: auto;
    }

    /* ----- TERMINAL TEXT AND CURSOR ----- */
    .output-line {
      white-space: pre-wrap;
      line-height: 1.5;
    }
    .input-line {
      display: inline-block;
    }
    .blinking-cursor {
      display: inline-block;
      width: 10px;
      background-color: #00ff00;
      margin-left: 2px;
      animation: blink 1s infinite;
    }

    @keyframes blink {
      0%, 50% { opacity: 1; }
      51%, 100% { opacity: 0; }
    }

    /* ----- GLITCH EFFECT (OPTIONAL) ----- */
    /* This is a simple example. You can enhance the glitch effect with more complex CSS or JS. */
    .glitch {
      position: relative;
      display: inline-block;
    }
    .glitch::before, .glitch::after {
      content: attr(data-text);
      position: absolute;
      left: 0;
      text-shadow: -2px 0 #ff00c1;
      top: 0;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
    }
    .glitch::before {
      animation: glitch-anim 2s infinite linear alternate-reverse;
    }
    .glitch::after {
      text-shadow: -2px 0 #00fff9;
      animation: glitch-anim2 3s infinite linear alternate-reverse;
    }
    @keyframes glitch-anim {
      0% { clip: rect(20px, 9999px, 25px, 0); }
      25% { clip: rect(80px, 9999px, 85px, 0); }
      50% { clip: rect(40px, 9999px, 45px, 0); }
      75% { clip: rect(60px, 9999px, 65px, 0); }
      100% { clip: rect(10px, 9999px, 15px, 0); }
    }
    @keyframes glitch-anim2 {
      0% { clip: rect(30px, 9999px, 35px, 0); }
      25% { clip: rect(70px, 9999px, 75px, 0); }
      50% { clip: rect(10px, 9999px, 15px, 0); }
      75% { clip: rect(50px, 9999px, 55px, 0); }
      100% { clip: rect(20px, 9999px, 25px, 0); }
    }
